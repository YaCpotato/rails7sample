<h1>Update your profile</h1>

<div class="row">
  <div class="span6 offset3">
  <p><%= @user.name %></p>
  <p><%= @user.email %></p>
    <%= render 'shared/error_messages' %>
    <%= form_for(@user) do |f| %>
      <%= f.label :slack_webhook_url %>
      <%= f.text_field :slack_webhook_url %>

      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>